@using Microsoft.AspNet.Identity
@model IEnumerable<MentorWeb.Models.Profile>
@{
    ViewBag.Title = "Mentors";
}

<h2>Mentees</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayName("Biography")
        </th>
        <th>
            @Html.DisplayName("Gender")
        </th>
        <th></th>
    </tr>


    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @* @Html.ActionLink("Edit", "Edit", new { id = item.ID })  attempted to add a mentor approval feature here *@
                    @Html.ActionLink("Open Chat", "Chat", "Home")
                </td>
            </tr>
        }
    }
</table>